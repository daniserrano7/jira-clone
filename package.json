{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./src/app/styles/app.css -o ./src/app/styles/app-compiled.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./src/app/styles/app.css -o ./src/app/styles/app-compiled.css",
    "start": "remix-serve build",
    "start:migrate": "npx prisma migrate deploy && npx prisma db seed && npm run start",
    "deploy": "fly deploy -a jira-clone",
    "type-check": "tsc --pretty --noEmit -p tsconfig.json",
    "lint": "pnpm eslint --ext ts,tsx src",
    "test": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-all": "pnpm run type-check && pnpm run lint && pnpm run test",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "prisma": {
    "schema": "src/infrastructure/db/schema.prisma",
    "seed": "ts-node -r tsconfig-paths/register --compiler-options {\"module\":\"CommonJS\"} src/infrastructure/db/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "@radix-ui/react-alert-dialog": "^1.0.2",
    "@radix-ui/react-avatar": "^1.0.1",
    "@radix-ui/react-checkbox": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.1",
    "@radix-ui/react-scroll-area": "^1.0.1",
    "@radix-ui/react-select": "^1.1.1",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@remix-run/server-runtime": "^1.16.1",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "classix": "^2.1.17",
    "prisma": "^4.8.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-toastify": "^9.1.3",
    "remix-utils": "^5.2.1",
    "tailwindcss-radix": "^2.6.1",
    "tailwindcss-radix-ui": "^0.0.4",
    "tiny-invariant": "^1.3.1",
    "uuid": "^8.3.2",
    "vite": "^2.9.9",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3",
    "@testing-library/dom": "^8.19.1",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.5.0",
    "eslint": "^8.23.1",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "zod": "3.19.1"
  },
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "@testing-library/dom": "^8.19.1",
    "zod": "3.19.1"
  }
}
